<p id="notice"><%= notice %></p>

<h1 class="text-center">P R O D U C T S</h1>

<br>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Aqu√≠ puedes ver, editar o eliminar un producto</div>
  <!-- Table -->
  <table class="table">
      <thead>
        <tr>
          <th>NOMBRE</th>
          <th>PRECIO</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= link_to 'Show', product, class: "btn btn-primary" %></td>
            <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-info" %></td>
            <td><%= link_to 'Destroy', product, class: "btn btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>

